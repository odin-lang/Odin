KeymodFlag :: enum u16 {
	LSHIFT   = 0x0,
	RSHIFT   = 0x1,
	LCTRL    = 0x6,
	RCTRL    = 0x7,
	LALT     = 0x8,
	RALT     = 0x9,
	LGUI     = 0xa,
	RGUI     = 0xb,
	NUM      = 0xc,
	CAPS     = 0xd,
	MODE     = 0xe,
	RESERVED = 0xf,
}

Keymod :: distinct bit_set[KeymodFlag; u16];

KMOD_NONE     :: Keymod{};
KMOD_LSHIFT   :: Keymod{.LSHIFT};
KMOD_RSHIFT   :: Keymod{.RSHIFT};
KMOD_LCTRL    :: Keymod{.LCTRL};
